<Window x:Class="MMO_Client.Screens.LoginScreen"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MMO_Client.Screens"
        mc:Ignorable="d"
        Title="LoginScreen" Height="180" Width="425" ResizeMode="CanMinimize" Background="Gold">
    <Grid>
        <TextBox x:Name="UsernameTextbox" Margin="10,31,10,0" Text="" VerticalAlignment="Top" MaxLength="16" TextChanged="UsernameTextbox_TextChanged"/>
        <Label Content="Username:" HorizontalAlignment="Left" Margin="10,5,0,0" VerticalAlignment="Top"/>
        <PasswordBox x:Name="PwdPasswordbox" Margin="10,80,10,0" VerticalAlignment="Top" PasswordChanged="PwdPasswordbox_PasswordChanged"/>
        <Label Content="Password:" HorizontalAlignment="Left" Margin="10,54,0,0" VerticalAlignment="Top"/>
        <Button x:Name="LoginButton" Content="Login" HorizontalAlignment="Center" VerticalAlignment="Top" Height="26" Width="233" Margin="0,109,0,0" IsEnabled="False" Click="LoginButton_Click"/>
    </Grid>
</Window>
