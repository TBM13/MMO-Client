<UserControl x:Class="MMO_Client.Screens.ServersScreen"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:MMO_Client.Screens"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid Background="White">
        <ListView x:Name="List" Margin="25" HorizontalContentAlignment="Stretch" SelectionMode="Single" KeyDown="List_KeyDown"/>
        <Button x:Name="Refresh" HorizontalAlignment="Right" VerticalAlignment="Bottom" Content="Refresh" Width="65" Margin="3" Click="Refresh_Click"/>
        <local:LoadScreen x:Name="LoadScreen"/>
    </Grid>
</UserControl>
