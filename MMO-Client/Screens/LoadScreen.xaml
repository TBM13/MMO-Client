<UserControl x:Class="MMO_Client.Screens.LoadScreen"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:MMO_Client.Screens"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid Background="White">
        <Label x:Name="LoadLabel" Margin="50,-50,50,0" Height="28" VerticalAlignment="Center" Content="Loading..."/>
        <ProgressBar x:Name="LoadProgressbar" Margin="50,0,50,0" Height="20" VerticalAlignment="Center" IsIndeterminate="True"/>
        <Button x:Name="RetryButton" Content="Retry" Margin="50,55,50,0" Height="21" HorizontalAlignment="Center" Width="88" VerticalAlignment="Center" Visibility="Hidden" Click="RetryButton_Click"/>
    </Grid>
</UserControl>
